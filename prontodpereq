    <!--             

    Scripts

             --><script>
    $(function() {

        pegaDataAtual();

        function pegaDataAtual() {
        document.getElementById("field2").value = formataData2(new Date(Date.now()));
        }

        function formataData2(data) {
    return ("0" + data.getDate()).slice(-2) + "/" + ("0" + (data.getMonth() + 1)).slice(-2) + "/" + data.getFullYear()
}

            /**
             * Posta o form
             */
            $('form').on('submit', function (e) {
                e.preventDefault();

                //substitui field0, field1 pelos valores corretos
                format_fields();
                    $.post('/post', {
                        t: 3319,
                        message: $('#fa-generated-message').val().trim(),
                        mode: 'reply',
                        tid: $('[name="tid"]:first').val(),
                        post: 1,
                    }).done(function () {
                        location.href = 'http://' + location.host + '/t3319-dep-requerimentos-da-companhia';
                    }).fail(function () {
                        alert('Houve um erro! Tente novamente!');
                    });
            });

            /**
             * Método para alterar o template da mensagem que é enviada ao fórum. É acionado quando a pessoa seleciona um modelo.
             */
            function alteraTemplateMensagem(opcaoEscolhida) {
                var texto;
                switch (opcaoEscolhida) {
                    case "1":
                        texto =
                            "[size=18][center][color=#330000][b]ENTRADA NA COMPANHIA[/b][/color][/center][/size]\n\n" +
                            "[b]Nick(s):[/b] {field0}\n" +
                            "[b]Data de entrada:[/b] {field2}\n" +
                            "&#10149; [b]{field1}[/b]";
                        break;
                    case "2":
                        texto =
                            "[size=18][center][color=#330000][b]GRADUAÇÃO[/b][/color][/center][/size]\n\n" +
                            "[b]Nick(s) do(s) aprovado(s):[/b] {field3}\n";
                        break;
                    case "3":
                        texto =
                            "[size=18][center][color=#330000][b]PEDIDO DE LICENÇA / RESERVA[/b][/color][/center][/size]\n\n" +
                            "[b]Nick:[/b] {field5}\n" +
                            "[b]Período da Licença / Reserva:[/b] {field6} dias\n" +
                            "[b]Permissão:[/b] {field8}\n\n" +
                            "&#10149; Li e concordo com as normas de licença/reserva. Sendo assim, me responsabilizo em postar o retorno no final do prazo em até 24 horas. Estarei passível de ser expulso da companhia, caso não for realizado a postagem.";
                        break;
                    case "4":
                        texto =
                            "[size=18][center][color=#330000][b]RETORNO DE LICENÇA / RESERVA[/b][/color][/center][/size]\n\n" +
                            "[b]Nick:[/b] {field9}\n" +
                            "&#10149; Estou retornando de minha licença / reserva.";
                        break;
                    case "5":
                        texto =
                            "[size=18][center][color=#330000][b]PROMOÇÃO/REBAIXAMENTO[/b][/color][/center][/size]\n\n" +
                            "[b]Nick:[/b] {field10}\n" +
                            "[b]Cargo atual:[/b] {field11}\n" +
                            "[b]Novo cargo:[/b] {field12}\n" +
                            "[b]Motivo:[/b] {field13}";
                        break;
                    case "6":
                        texto =
                            "[size=18][center][color=#330000][b]ADVERTÊNCIA INTERNA[/b][/color][/center][/size]\n\n" +
                            "[b]Nick:[/b] {field14}\n" +
                            "[b]Término:[/b] {field15}\n" +
                            "[b]Motivo:[/b] {field16}";
                        break;
                    case "7":
                        texto =
                            "[size=18][center][color=#330000][b]SAÍDA DA COMPANHIA[/b][/color][/center][/size]\n\n" +
                            "[b]Nick:[/b] {field17}\n" +
                            "[b]Motivo:[/b] {field18}\n" +
                            "[b]Permissão:[/b] {field19}\n\n" +
                            "&#10149; Eu estou saindo com permissão do ministério+.";
                        break;
                    case "8":
                        texto =
                            "[size=18][center][color=#330000][b]EXPULSÃO DA COMPANHIA[/b][/color][/center][/size]\n\n" +
                            "[b]Nick:[/b] {field20}\n" +
                            "[b]Motivo:[/b] {field40}";
                        break;
                    case "9":
                        texto =
                            "[size=18][center][color=#330000][b]ALTERAÇÃO DE NICK[/b][/color][/center][/size]\n\n" +
                            "[b]Nick na listagem:[/b] {field23}\n" +
                            "[b]Novo nick:[/b] {field24}";
                        break;
                    case "10":
                        texto =
                            "[size=18][center][color=#330000][b]REINTEGRAÇÃO DE MEMBROS[/b][/color][/center][/size]\n\n" +
                            "[b]Nick:[/b] {field25}\n" +
                            "[b]Teve um mês ou mais na companhia:[/b] {field26}\n" +
                            "[b]Permissão:[/b] {field27}\n"
                            
                        break;
                    default:
                        break;
                }

                $("#fa-generated-message").html(texto);

            }

            $("#dataTermino").change(function () {
                $("#field15").val(formataData(new Date($("#dataTermino").val())));
            })

            //mostra o formulario escolhido
            $("#selecaoDeFormulario").click(function () {
                alteraTemplateMensagem($('#opcoesIniciais').val());

                $("#formPrincipal").fadeOut(function () {
                    $("#form" + $('#opcoesIniciais').val()).fadeIn();
                });
            })

            //PARTE DE SUBSTITUIR OS VALORES
            list_elements_parse = '';
            list_elements_number = '';
            mode = 0;

            function format_fields() {
                $('*[template]').each(function () {
                    formated = jQuery(this).attr('template').replace(/{field([0-9]+)}/gi, function (exp, i) {
                        return field_value(i)
                    });
                    jQuery(this).val(formated)
                });
                jQuery('#fa-generated-message').html(jQuery('#fa-generated-message').html().replace(/{field([0-9]+)}/gi, function (exp, i) {
                    return field_value(i)
                }));
                return true
            }

            function field_value(field_id) {
                field = jQuery('#field' + field_id);
                if (jQuery('#field' + field_id)[0].nodeName == 'SELECT') {
                    return field.find(":selected").text();
                } else {
                    return field.val()
                }
            }
            jQuery(function () {
                jQuery('dl[title]').removeAttr('title')
            });
        });
    </script>

    <script>
      //por algum motivo o seletor de data tá devolvendo com 01 dia a menos, por isso tem que deixar 31 dias 
      function formataData(data) {
    data = data.addDays(31)
    return ("0" + data.getDate()).slice(-2) + "/" + ("0" + (data.getMonth() + 1)).slice(-2) + "/" + data.getFullYear()
}

Date.prototype.addDays=function(d){return new Date(this.valueOf()+864E5*d);};
    </script>

  
</script>

</body></html>
